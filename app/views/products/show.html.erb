<div class="mb-6">
  <%= link_to products_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 font-medium" do %>
    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    Back to products
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <% if @product.featured_image.attached? %>
    <div class="rounded-lg overflow-hidden bg-white shadow-sm border border-gray-200">
      <%= image_tag @product.featured_image, class: "w-full h-auto" %>
    </div>
  <% end %>

  <div class="<%= 'lg:col-span-2' unless @product.featured_image.attached? %>">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      <% cache @product do %>
        <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @product.name %></h1>
        <div class="text-gray-700 mb-6"><%= @product.description %></div>
      <% end %>

      <%= render "inventory", product: @product %>

      <% if authenticated? %>
        <div class="flex items-center space-x-4 mt-8 pt-6 border-t border-gray-200">
          <%= link_to edit_product_path(@product), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
          <% end %>
          <%= button_to @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
