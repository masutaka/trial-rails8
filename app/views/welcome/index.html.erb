<div class="text-center py-12">
  <h1 class="text-5xl font-bold text-gray-900 mb-4">Welcome</h1>
  <p class="text-xl text-gray-600 mb-12">Choose a section to explore</p>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
    <%= link_to products_path, class: "group" do %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all p-8 border border-gray-200 hover:border-blue-300">
        <div class="text-blue-600 mb-4">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
        </div>
        <h2 class="text-2xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">Products</h2>
        <p class="text-gray-600 mt-2">Browse our product catalog</p>
      </div>
    <% end %>

    <%= link_to chat_path, class: "group" do %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all p-8 border border-gray-200 hover:border-green-300">
        <div class="text-green-600 mb-4">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <h2 class="text-2xl font-semibold text-gray-900 group-hover:text-green-600 transition-colors">Chat</h2>
        <p class="text-gray-600 mt-2">Join the conversation</p>
      </div>
    <% end %>

    <%= link_to posts_path, class: "group" do %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all p-8 border border-gray-200 hover:border-purple-300">
        <div class="text-purple-600 mb-4">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
        </div>
        <h2 class="text-2xl font-semibold text-gray-900 group-hover:text-purple-600 transition-colors">Posts</h2>
        <p class="text-gray-600 mt-2">Read our latest blog posts</p>
      </div>
    <% end %>
  </div>
</div>
