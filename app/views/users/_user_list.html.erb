<% if users.any? %>
  <div class="space-y-4">
    <% users.each do |user| %>
      <%= link_to user_path(user.username), class: "block" do %>
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow border border-gray-200 p-4 cursor-pointer">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-lg font-semibold text-gray-900">@<%= user.username %></p>
            </div>
            <% if Current.user && Current.user != user %>
              <div onclick="event.stopPropagation();">
                <%= render "follows/button", user: user %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <p class="text-gray-600">ユーザーがいません。</p>
  </div>
<% end %>
