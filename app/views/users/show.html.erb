<% content_for :title, "@#{@user.username}" %>

<div class="mb-8">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900">@<%= @user.username %></h1>
    <%= render "follows/button", user: @user %>
  </div>
  <div class="mt-4">
    <%= render "follows/stats", user: @user %>
  </div>
</div>

<% if @posts.any? %>
  <div id="posts" class="space-y-6">
    <% @posts.each do |post| %>
      <%= link_to post, class: "block" do %>
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow border border-gray-200 p-6 cursor-pointer">
          <%= render post, show_body: false %>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <p class="text-gray-600">まだ投稿がありません。</p>
  </div>
<% end %>
