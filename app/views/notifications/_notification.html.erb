<div class="px-4 py-3 hover:bg-gray-50 transition-colors <%= 'bg-blue-50' unless notification.read %> border-b border-gray-100">
  <%= link_to post_path(notification.post.slug), class: "block" do %>
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <p class="text-sm font-medium text-gray-900">
          新しい記事が公開されました
        </p>
        <p class="text-sm text-gray-600 mt-1">
          <%= notification.post.title %>
        </p>
        <p class="text-xs text-gray-500 mt-1">
          <%= time_ago_in_words(notification.created_at) %>前
        </p>
      </div>
      <% unless notification.read %>
        <span class="ml-2 h-2 w-2 bg-blue-500 rounded-full flex-shrink-0 mt-1"></span>
      <% end %>
    </div>
  <% end %>
  <% unless notification.read %>
    <%= button_to "既読にする", mark_as_read_notification_path(notification.id),
        method: :patch,
        class: "mt-2 text-xs text-blue-600 hover:text-blue-800",
        form: { data: { turbo_frame: "_top" } } %>
  <% end %>
</div>
