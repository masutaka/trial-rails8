<div id="<%= dom_id post %>">
  <p>
    <strong>Author:</strong>
    <%= post.user.email_address %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>

</div>
