<%# locals: (post:, show_body: true) %>
<div id="<%= dom_id post %>">
  <p>
    <strong>Author:</strong>
    <%= post.user.email_address %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <% if show_body %>
    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>
  <% end %>

  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>

</div>
