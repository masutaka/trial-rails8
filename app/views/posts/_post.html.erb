<%# locals: (post:, show_body: true) %>
<div id="<%= dom_id post %>">
  <p>
    <strong>Author:</strong>
    <%= post.user.email_address %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <% if show_body %>
    <div>
      <strong>Body:</strong>
      <div>
        <%= markdown(post.body) %>
      </div>
    </div>
  <% end %>

  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>

</div>
