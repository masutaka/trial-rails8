<%# locals: (post:, show_body: true) %>
<div id="<%= dom_id post %>">
  <div class="mb-4">
    <div class="flex items-center gap-2 mb-2">
      <h1 class="text-2xl font-semibold text-gray-900"><%= post.title %></h1>
      <% unless post.published %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
          Draft
        </span>
      <% end %>
    </div>
    <div class="flex items-center text-sm text-gray-600 space-x-4">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <%= link_to "@#{post.user.username}", user_path(post.user.username), class: "hover:text-blue-600 transition-colors" %>
      </div>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <% if post.published %>
          <%= post.published_at&.strftime("%B %d, %Y") || "公開日時未設定" %>
        <% elsif post.published_at.present? %>
          公開予定: <%= post.published_at.strftime("%B %d, %Y") %>
        <% else %>
          公開日時未設定
        <% end %>
      </div>
      <% unless show_body %>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
          <%= post.comments.size %>
        </div>
      <% end %>
    </div>
  </div>

  <% if show_body %>
    <div class="prose prose-gray max-w-none">
      <%= markdown(post.body) %>
    </div>
  <% end %>
</div>
