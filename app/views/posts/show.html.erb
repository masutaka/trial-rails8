<div class="max-w-4xl mx-auto">
  <nav class="mb-4">
    <div class="flex items-center text-sm text-gray-600">
      <%= link_to "Home", root_path, class: "hover:text-gray-900 font-medium" %>
      <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <%= link_to "Posts", posts_path, class: "hover:text-gray-900 font-medium" %>
    </div>
  </nav>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-6">
    <%= render @post, show_body: true %>
  </div>

  <% if @previous_post || @next_post %>
    <div class="flex items-center justify-between mb-6 pb-6 border-b border-gray-200">
      <div class="flex-1">
        <% if @previous_post %>
          <%= link_to post_path(@previous_post), class: "group block p-4 rounded-lg hover:bg-gray-50 transition-colors" do %>
            <div class="text-sm text-gray-500 mb-1 flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              前の記事
            </div>
            <div class="text-gray-900 font-medium group-hover:text-blue-600"><%= @previous_post.title %></div>
          <% end %>
        <% end %>
      </div>
      <div class="flex-1 text-right">
        <% if @next_post %>
          <%= link_to post_path(@next_post), class: "group block p-4 rounded-lg hover:bg-gray-50 transition-colors" do %>
            <div class="text-sm text-gray-500 mb-1 flex items-center justify-end">
              次の記事
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
            <div class="text-gray-900 font-medium group-hover:text-blue-600"><%= @next_post.title %></div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @post.user == Current.user %>
    <div class="flex items-center justify-between mb-6">
      <div>
        <%= link_to "Edit this post", edit_post_path(@post), class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
      <div>
        <%= button_to "Destroy this post", @post, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" }, class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors" %>
      </div>
    </div>
  <% end %>

  <!-- コメントセクション -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <h2 class="text-xl font-bold text-gray-900 mb-4">
      コメント
      <span class="text-sm font-normal text-gray-500">(<%= @post.comments.count %>)</span>
    </h2>

    <!-- コメント一覧 -->
    <div class="mb-6">
      <% if @post.comments.any? %>
        <div class="space-y-2">
          <%= render @post.comments.order(created_at: :asc) %>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm py-4">まだコメントがありません。最初のコメントを投稿しましょう！</p>
      <% end %>
    </div>

    <!-- 新規コメントフォーム -->
    <% if authenticated? %>
      <div class="border-t border-gray-200 pt-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">コメントを投稿</h3>
        <%= render "comments/form", comment: Comment.new, url: post_comments_path(@post), submit_label: "コメントを投稿" %>
      </div>
    <% else %>
      <div class="border-t border-gray-200 pt-6">
        <p class="text-gray-600 text-sm">
          コメントを投稿するには
          <%= link_to "ログイン", new_session_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
          してください。
        </p>
      </div>
    <% end %>
  </div>
</div>
