<%= form_with(model: post, class: "space-y-6") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h2 class="text-red-800 font-semibold mb-2">
        <%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:
      </h2>
      <ul class="list-disc list-inside text-red-700 space-y-1">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" %>
  </div>

  <div>
    <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :body, rows: 10, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" %>
  </div>

  <div>
    <%= form.label :published_at, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.datetime_field :published_at, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" %>
    <p class="mt-1 text-sm text-gray-500">未来の日時を設定すると、その時刻に自動公開されます。</p>
  </div>

  <div>
    <%= form.label :slug, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :slug, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
  </div>
<% end %>
