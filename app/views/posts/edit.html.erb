<% content_for :title, "Editing post" %>

<div class="max-w-3xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Editing post</h1>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <%= render "form", post: @post %>
  </div>

  <div class="mt-4 flex items-center space-x-4">
    <%= link_to @post, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium" do %>
      Show this post
    <% end %>
    <span class="text-gray-400">|</span>
    <%= link_to posts_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 font-medium" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to posts
    <% end %>
  </div>
</div>
