<% content_for :title, "Posts" %>

<div class="mb-8">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Posts</h1>
    <%= link_to new_post_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      New post
    <% end %>
  </div>
</div>

<div id="posts" class="space-y-6">
  <% @posts.each do |post| %>
    <%= link_to post, class: "block" do %>
      <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow border border-gray-200 p-6 cursor-pointer">
        <%= render post, show_body: false %>
      </div>
    <% end %>
  <% end %>
</div>
